<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/user_profile_background"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center">

        <ImageButton
            android:id="@+id/cancelEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_button"
            android:contentDescription="@string/go_back"
            android:background="#FF8BC2E4"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <ImageButton
            android:id="@+id/saveProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/done"
            android:src="@drawable/done_icon"
            android:background="#FF8BC2E4"/>

    </LinearLayout>

    <!-- Profile Photo -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePhoto_editProfile"
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:src="@drawable/profile_photo"/>

    <TextView
        android:id="@+id/enableEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Edit"
        android:textColor="@color/purple_700"
        android:textSize="17sp"
        android:textAlignment="viewEnd"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"/>

    <!-- Edit Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="#4A4A4A"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_your_profile"
                android:layout_margin="10dp"
                android:contentDescription="@string/edit_your_profile"/>

            <EditText
                android:id="@+id/editName"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:textColorHint="#474646"
                android:hint="Edit Name"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Edit User Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="#4A4A4A"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_your_profile"
                android:layout_margin="10dp"
                android:contentDescription="@string/edit_your_profile"/>

            <EditText
                android:id="@+id/editUserName"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:textColorHint="#474646"
                android:hint="Edit Username"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Edit Email -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="#4A4A4A"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_email"
                android:layout_margin="10dp"
                android:contentDescription="@string/email"/>

            <EditText
                android:id="@+id/editUserEmail"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:textColorHint="#474646"
                android:hint="Edit Email"
                android:autofillHints="emailAddress"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Edit Gender -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="#4A4A4A"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_gender"
                android:layout_margin="10dp"
                android:contentDescription="@string/edit_profile"/>

            <EditText
                android:id="@+id/editUserGender"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:textColorHint="#474646"
                android:hint="Gender"
                android:inputType="text"
                android:textSize="18sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>