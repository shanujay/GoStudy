<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:contentDescription="Music Screen"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".StudyMusicActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backBtnStudyMusic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:src="@drawable/back_button"
                android:contentDescription="@string/go_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Study Music"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="18sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/music_screen_image"
            android:contentDescription="Music Screen Image"/>

        <!-- Music Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

            <!-- Study Music 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFECE2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Music Note"
                        android:src="@drawable/study_music_icon"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="City Life Chill Lofi"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/music_1_play"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Play music"
                        android:src="@drawable/options_icon"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="#FFECE2"
                        android:layout_margin="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Study Music 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFECE2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Music Note"
                        android:src="@drawable/study_music_icon"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Sweet Breez"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/music_2_play"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Play Music 2"
                        android:src="@drawable/options_icon"
                        android:backgroundTint="#FFECE2"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Study Music 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFECE2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Music Note"
                        android:src="@drawable/study_music_icon"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Nature Lof"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/music_3_play"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Play Music"
                        android:src="@drawable/options_icon"
                        android:backgroundTint="#FFECE2"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Study Music 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFECE2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Music Note"
                        android:src="@drawable/study_music_icon"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Lofi Chill"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/music_4_play"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Play Music 4"
                        android:src="@drawable/options_icon"
                        android:backgroundTint="#FFECE2"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Study Music 5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFECE2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Music Note"
                        android:src="@drawable/study_music_icon"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Science Documentary "
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/music_5_play"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Play"
                        android:src="@drawable/options_icon"
                        android:backgroundTint="#FFECE2"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Study Music 6 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFECE2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Music Note"
                        android:src="@drawable/study_music_icon"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Study Music 6"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/music_6_play"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Play"
                        android:src="@drawable/options_icon"
                        android:backgroundTint="#FFECE2"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>



</ScrollView>